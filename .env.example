# AIService Environment Configuration

# Server Configuration
PORT=8080
ENV=dev

# Database Configuration
# Options: memory, sqlite
DB_TYPE=memory

# SQLite Configuration (used when DB_TYPE=sqlite)
SQLITE_FILE_PATH=./aiservice.db

# LLM Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_api_key_here
LLM_MODEL=googleai/gemini-2.5-flash

# Job Configuration
JOB_QUEUE_SIZE=100
JOB_WORKERS=2
DB_JOB_WORKERS=1
JOB_MAX_RETRIES=3
JOB_RETRY_BACKOFF=2s

# Timeout Configuration
TIMEOUT_SYNC_PROCESS=20m
TIMEOUT_INK_RECOGNIZE=20m
TIMEOUT_LLM_REQUEST=20m

# Debug Configuration
DB_DEBUG=false